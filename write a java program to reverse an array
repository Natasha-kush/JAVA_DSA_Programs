package java_ques;

/**
 *
 * @author kushn
 */
//write a java program to reverse an array
public class Reverse_array5 {
    public static void arr(int num[]){
    
    int first=0;
    int last=num.length-1;
    //swapping
    while(first<last){
    int temp=num[last];
    num[last]=num[first];
    num[first]=temp;
    first++;
    last--;
    
    }
    }
    public static void main(String[]args){
    int num[]={1,2,3,5,4};
   //java_array5 ins = new Reverse_array5();//creating an instance of class
   arr(num);//calling function;
   for(int i=0;i<num.length;i++){
   System.out.println(num[i]);
   }
   System.out.println();
    }
}
