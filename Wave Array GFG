class Solution {
    public static void convertToWave(int[] arr) {
         int n = arr.length;

        // Traverse all even indexed elements
        for (int i = 0; i < n - 1; i += 2) {
            // Swap current element with next
            int temp = arr[i];
            arr[i] = arr[i + 1];
            arr[i + 1] = temp;
       }
    }
}
